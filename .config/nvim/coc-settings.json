{
  "java.home": "/usr/lib/jvm/java-8-openjdk",
  // "coc.preferences.formatOnSaveFiletypes": ["css", "markdown", "js", "html", "json"],
  // suggestions
  // "suggest.echodocSupport": true,
  // TODO add more labels and give them cool glyphs
  "suggest.completionItemKindLabels": {
    "text": "t",
    "method": "m",
    "function": "f"
  },

  // diagnostics
  "diagnostic.errorSign": "✗",
  "diagnostic.warningSign": "⚠",
  "diagnostic.infoSign": "",
  "diagnostic.hintSign": " ",
  // "diagnostic.displayByAle": true,

  // codelens TODO what does this get me?
  // "codeLens.enable": true,

  // list
  "list.indicator": ">",
  "list.selectedSignText": " ",

  // python config
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,

  // snippets
  "snippets.ultisnips.directories": ["UltiSnips", "~/.config/nvim/utils/snips"],

  // explorer
  "explorer.width": 30,
  "explorer.icon.enableNerdfont": true,
  "explorer.previewAction.onHover": false,
  "explorer.icon.enableVimDevicons": false,
  "explorer.keyMappings": {
    "<cr>": ["expandable?", "expand", "open"],
    "v": "open:vsplit",
    "h": "open:split"
  },

  "prettier.tabWidth": 4,
  "prettier.singleQuote": true,
  "prettier.semi": true,
  "prettier.trailingComma": "es5"
}
